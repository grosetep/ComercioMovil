<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="oval">
            <gradient
                android:startColor="@color/colorClickable"
                android:endColor="@color/colorClickable"
                android:angle="45"/>
            <padding android:left="7dp"
                     android:top="7dp"
                     android:right="7dp"
                     android:bottom="7dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="oval">
            <gradient
                android:startColor="@color/colorTransparent"
                android:endColor="@color/colorTransparent"
                android:angle="45"/>
            <padding android:left="7dp"
                     android:top="7dp"
                     android:right="7dp"
                     android:bottom="7dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>