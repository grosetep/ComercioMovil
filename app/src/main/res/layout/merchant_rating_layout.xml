<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_business"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:layout_gravity="center|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

               <RatingBar
                   android:id="@+id/rating_purchase"
                   style="?android:attr/ratingBarStyleSmall"
                   android:theme="@style/RatingBar"
                   android:isIndicator="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/text_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="italic"
                    android:text="opinion..."
                    android:layout_gravity="center"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="100">
                    <TextView
                        android:id="@+id/text_name_or_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/negro"
                        android:textAlignment="textStart"
                        android:layout_gravity="start"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Mexico"
                        android:layout_weight="50"
                        />
                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"
                        android:textColor="@color/gray"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="12/12/2016"
                        android:layout_weight="50"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

</RelativeLayout>
