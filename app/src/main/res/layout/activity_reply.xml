<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="45dp"
                android:paddingTop="45dp"
                android:gravity="center"
                tools:context="estrategiamovil.comerciomovil.ui.activities.ReplyActivity">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo_landscape_normal"
        android:layout_gravity="center_horizontal"

        />


    <EditText
        android:layout_below="@+id/logo"
        android:id="@+id/edit_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/negro"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button_send"
        android:hint="@string/action_notify_reply"/>

    <ImageButton
        android:id="@+id/button_send"
        android:layout_below="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:background="@null"
        android:padding="8dp"
        android:tint="@color/colorPrimaryDark"
        android:src="@drawable/ic_send"/>
</RelativeLayout>
