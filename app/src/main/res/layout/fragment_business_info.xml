<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="estrategiamovil.comerciomovil.ui.fragments.BusinessInfoFragment">

    <LinearLayout
        android:layout_width="match_parent" android:layout_marginTop="8dp" android:padding="8dp"  android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:textColor="@color/negro_semitransparente"
            android:layout_height="match_parent"/>
    </LinearLayout>



</ScrollView>
